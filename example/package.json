{
    "name": "verifies-example",
    "version": "1.0.0",
    "description": "In browser testing framework",
    "main": "./dist/index.js",
    "scripts": {
        "git": "git-cliff > CHANGELOG.md && git-commit-m",
        "bump": "pnpm version patch",
        "npmjs": "pnpm publish",
        "release": "run-s -c git bump npmjs",
        "preinstall": "npx only-allow pnpm",
        "declaration": "tsc --declaration --emitDeclarationOnly --outDir dist/types --declarationDir dist/types",
        "build": "vite build",
        "preview": "vite preview",
        "watch": "concurrently \"vite build --watch\" \"tsc --watch\" ",
        "dev": "vite  --force --mode dev --host",
        "comment": "while debugging, pnpm link -g in ../ before running following command",
        "debug:sample": "chk-debug  src/sample.test.ts",
        "debug:components": "chk-debug src/components.test.tsx",
        "watch:sample": "chk-watch src/sample.test.ts",
        "watch:components": "chk-watch src/components.test.tsx",
        "test:console": "chk",
        "watch:console": "chk-watch",
        "debug:console": "chk-debug",
        "test:sample": "chk src/sample.test.ts",
        "test:console:app": "chk src/components.test.tsx",
        "test:watch": "chk-watch src/app.test.tsx",
        "test:html": "chk src/components.test.html",
        "chk": "chk",
        "chk:i": "chk -i"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.11",
        "@vitejs/plugin-react": "^5.0.3",
        "glob": "^11.0.3",
        "tailwindcss": "^4.1.11",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vite-plugin-clean": "^1.0.0",
        "vite-plugin-snapshot": "workspace:../../../vite-plugin-snapshot",
        "vite-plugin-test": "workspace:../../vite-plugin-test"
    },
    "dependencies": {
        "@woby/simple-router": "^1.4.12",
        "@woby/chk": "workspace:../",
        "happy-dom": "^18.0.1",
        "woby": "^1.58.33"
    }
}