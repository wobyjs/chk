{
    "name": "verifies-example",
    "version": "1.0.0",
    "description": "In browser testing framework",
    "main": "./dist/index.js",
    "scripts": {
        "git": "git add . && git commit -m \"Bump version\" && git push",
        "bump": "pnpm version patch",
        "npmjs": "pnpm publish",
        "release": "run-s -c git bump npmjs",
        "preinstall": "npx only-allow pnpm",
        "declaration": "tsc --declaration --emitDeclarationOnly --outDir dist/types --declarationDir dist/types",
        "build": "vite build",
        "preview": "vite preview",
        "watch": "concurrently \"vite build --watch\" \"tsc --watch\" ",
        "dev": "vite  --force --mode dev --host",
        "comment": "while debugging, pnpm link -g in ../ before running following command",
        "debug:console": "chk-watch  src/sample.test.ts",
        "debug:console:app": "chk-debug src/app.test.tsx",
        "watch:console": "chk src/sample.test.ts",
        "watch:console:app": "chk-watch src/app.test.tsx",
        "test:console": "chk src/sample.test.ts",
        "test:console:app": "chk src/components.test.tsx",
        "test:watch": "chk-watch src/app.test.tsx",
        "chk": "chk",
        "chk:i": "chk -i"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.11",
        "tailwindcss": "^4.1.11",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vite-plugin-clean": "^1.0.0",
        "vite-plugin-snapshot": "^1.0.3"
    },
    "dependencies": {
        "happy-dom": "^18.0.1",
        "chk": "workspace:../",
        "woby": "^1.58.32"
    }
}