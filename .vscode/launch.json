{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Deno with Watch",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--watch",
                "--allow-read",
                "--allow-net",
                "--allow-env",
                "src/bin/verifies.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}