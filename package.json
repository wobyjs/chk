{
    "name": "@woby/chk",
    "version": "0.1.3",
    "description": "In browser testing framework",
    "publishConfig": {
        "access": "public"
    },
    "bin": {
        "chk": "./chk.CMD",
        "chk-watch": "./chk-watch.CMD",
        "chk-debug": "./chk-debug.CMD",
        "chk-debug-watch": "./chk-debug-watch.CMD",
        "node-chk": "./dist/bin/chk.js"
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.umd.js"
        },
        "./index.css": "./dist/index.css"
    },
    "scripts": {
        "run this alone, then commit": "",
        "git": "git-cliff > CHANGELOG.md && git-commit-m",
        "bump": "pnpm version patch",
        "push": "git push",
        "commit": "pnpm bump && pnpm push",
        "npmjs": "pnpm publish",
        "preinstall": "npx only-allow pnpm",
        "declaration": "tsc --build --declaration --emitDeclarationOnly --declarationMap  --verbose",
        "build:lib": "vite build",
        "build:cli": "vite build --config vite.config.bin.mts",
        "build": "pnpm build:lib && pnpm build:cli && pnpm declaration && pnpm link -g",
        "watch": "concurrently \"vite build --watch\" \"tsc --watch\" ",
        "build:examples": "cd example && pnpm build",
        "build:test": "cd example && pnpm build",
        "dev": "cd example && pnpm dev",
        "deps": "dpdm -T ./src/index.ts ",
        "html": "cd example && pnpm test:html",
        "node-chk": "node dist/bin/chk.js"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.11",
        "@types/node": "^22.13.1",
        "@types/react": "^19.1.13",
        "diff": "^8.0.2",
        "happy-dom": "^18.0.1",
        "soby": "^15.1.12",
        "tailwindcss": "^4.1.11",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vite-plugin-snapshot": "workspace:../vite-plugin-snapshot"
    },
    "peerDependencies": {
        "soby": "^15.1.12",
        "woby": "^1.58.33"
    },
    "dependencies": {
        "ansis": "^4.1.0",
        "cli-highlight": "^2.1.11",
        "commander": "^14.0.1"
    }
}