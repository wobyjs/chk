{
    "name": "@woby/chk",
    "version": "0.1.3",
    "description": "In browser testing framework",
    "bin": {
        "chk": "./dist/bin/chk.js",
        "chk-deno": "./dist/bin/chk.ts"
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.umd.js"
        },
        "./index.css": "./dist/index.css"
    },
    "scripts": {
        "run this alone, then commit": "",
        "this": "git-cliff > CHANGELOG.md && git-commit-m",
        "bump": "pnpm version patch",
        "push": "git push",
        "commit": "pnpm bump && pnpm push",
        "npmjs": "pnpm publish",
        "preinstall": "npx only-allow pnpm",
        "declaration": "tsc --build --declaration --emitDeclarationOnly --declarationMap  --verbose",
        "build:lib": "vite build",
        "build:cli": "vite build --config vite.config.bin.mts",
        "build": "pnpm build:lib && pnpm build:cli && pnpm declaration",
        "watch": "concurrently \"vite build --watch\" \"tsc --watch\" ",
        "build:examples": "cd example && pnpm build",
        "build:test": "cd example && pnpm build",
        "test": "cd example && pnpm test",
        "deps": "dpdm -T ./src/index.ts ",
        "debug:console": "deno --watch --unstable-sloppy-imports --allow-read --allow-net --allow-env --inspect-brk src/bin/chk.ts ../../example/src/sample.test.ts",
        "debug:console:app": "deno --unstable-sloppy-imports --allow-read --allow-net --allow-env --inspect-brk src/bin/chk.ts ../../example/src/app.test.tsx",
        "//debug:watch": "deno --watch --unstable-sloppy-imports --allow-read --allow-net --allow-env --inspect-brk  src/bin/chk.ts  ../../example/src/app.test.tsx",
        "watch:console": "deno --watch --unstable-sloppy-imports --allow-read --allow-net --allow-env src/bin/chk.ts ../../example/src/sample.test.ts",
        "watch:console:app": "deno --watch --unstable-sloppy-imports --allow-read --allow-net --allow-env src/bin/chk.ts ../../example/src/app.test.tsx",
        "test:console": "deno  --unstable-sloppy-imports --allow-read --allow-net --allow-env src/bin/chk.ts ../../example/src/sample.test.ts",
        "test:console:app": "deno  --unstable-sloppy-imports --allow-read --allow-net --allow-env src/bin/chk.ts ../../example/src/app.test.tsx",
        "test:watch": "deno --watch --unstable-sloppy-imports --allow-read --allow-net --allow-env  src/bin/chk.ts  ../../example/src/app.test.tsx"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.11",
        "@types/node": "^22.13.1",
        "diff": "^8.0.2",
        "happy-dom": "^18.0.1",
        "soby": "^15.1.12",
        "tailwindcss": "^4.1.11",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vite-plugin-snapshot": "workspace:../vite-plugin-snapshot",
        "woby": "^1.58.32"
    },
    "peerDependencies": {
        "soby": "^15.1.12",
        "woby": "^1.58.32"
    },
    "dependencies": {
        "commander": "^14.0.1"
    }
}