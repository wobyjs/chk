{
    "name": "verifies",
    "version": "0.1.3",
    "description": "In browser testing framework",
    "main": "./dist/index.umd.js",
    "module": "./dist/index.mjs",
    "types": "./dist/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.umd.js"
        },
        "./index.css": "./dist/index.css"
    },
    "scripts": {
        "run this alone, then commit": "",
        "this": "git-cliff > CHANGELOG.md && git-commit-m",
        "bump": "pnpm version patch",
        "push": "git push",
        "commit": "pnpm bump && pnpm push",
        "npmjs": "pnpm publish",
        "release": "run-s -c git bump npmjs",
        "preinstall": "npx only-allow pnpm",
        "declaration": "tsc --build --declaration --emitDeclarationOnly --declarationMap  --verbose",
        "build": "vite build && pnpm declaration",
        "watch": "concurrently \"vite build --watch\" \"tsc --watch\" ",
        "build:examples": "cd example && pnpm build",
        "build:test": "cd example && pnpm build",
        "test": "cd example && pnpm test",
        "deps": "dpdm -T ./src/index.ts ",
        "test:console": "deno  --unstable-sloppy-imports --allow-read --allow-net --allow-env example/src/console.ts",
        "test:watch": "deno --watch --unstable-sloppy-imports --allow-read --allow-net --allow-env example/src/console.ts"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.11",
        "@types/node": "^22.13.1",
        "@vitejs/plugin-react-swc": "^3.10.0",
        "soby": "^15.1.12",
        "tailwindcss": "^4.1.11",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vite-plugin-clean": "^1.0.0",
        "vite-plugin-snapshot": "workspace:../vite-plugin-snapshot",
        "woby": "^1.58.32"
    },
    "peerDependencies": {
        "soby": "^15.1.12",
        "woby": "^1.58.32"
    }
}
